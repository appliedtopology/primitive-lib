	@Override
	public String toString() {
		StringBuilder builder = new StringBuilder();
		int index = 0;
		$coefficientType coefficient = null;
		for (Map.Entry<$objectType, $coefficientType> entry : this.map.entrySet()) {
			if (index > 0) {
